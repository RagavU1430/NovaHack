<script>
    // System Status Check (Polling)
    setInterval(async () => {
        try {
            const start = performance.now();
            const res = await fetch('/status'); // Global endpoint if I added it... or specific
            if (res.ok) {
                const end = performance.now();
                document.getElementById('system-status').innerText = 'ONLINE';
                document.getElementById('system-status').style.color = 'var(--nexus-primary)';
                document.getElementById('ping-val').innerText = Math.round(end - start);
            } else {
                throw new Error('Status Error');
            }
        } catch (e) {
            document.getElementById('system-status').innerText = 'OFFLINE';
            document.getElementById('system-status').style.color = 'red';
            document.getElementById('ping-val').innerText = '--';
        }
    }, 5000);
</script>
