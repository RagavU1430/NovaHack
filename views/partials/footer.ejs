    socket.on('connect', () => {
        document.getElementById('system-status').innerText = 'CONNECTED';
        document.getElementById('system-status').style.color = 'var(--nexus-primary)';
    });
    socket.on('disconnect', () => {
        document.getElementById('system-status').innerText = 'OFFLINE';
        document.getElementById('system-status').style.color = 'red';
    });
    socket.on('game_start', (data) => {
        // Maybe a global alert or reload if on waiting page
        if (window.location.pathname === '/waiting') {
            window.location.href = '/game/level1';
        }
    });
    socket.on('game_stop', (data) => {
        alert('GAME OVER: ' + data.message);
        window.location.href = '/waiting';
    });
