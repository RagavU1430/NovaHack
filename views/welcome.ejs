<%- include('partials/header', { user: null }) %>
    <div class="welcome-screen">
        <h1 class="glitch" data-text="NEXUS ACCESS CONTROL">NEXUS ACCESS CONTROL</h1>
        <p>Select your clearance level to proceed.</p>

        <div class="role-selection">
            <a href="/auth/login/host" class="btn-role">HOST (ADMIN)</a>
            <a href="/auth/login/participant" class="btn-role">PARTICIPANT (TEAM)</a>
        </div>
    </div>

    <style>
        .role-selection {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 40px;
        }

        .btn-role {
            display: inline-block;
            padding: 20px 40px;
            font-family: 'Courier New', Courier, monospace;
            font-size: 1.2rem;
            background: transparent;
            color: var(--nexus-primary);
            border: 2px solid var(--nexus-primary);
            text-decoration: none;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .btn-role:hover {
            background: var(--nexus-primary);
            color: #000;
            box-shadow: 0 0 15px var(--nexus-primary);
        }
    </style>
    <%- include('partials/footer') %>